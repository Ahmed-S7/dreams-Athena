<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/mainBackground"
    tools:context=".EntrantAndOrganizerFragments.createFacility">


    <TextView
        android:id="@+id/UIBox"
        android:layout_width="324dp"
        android:layout_height="590dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/border"
        android:paddingLeft="18dp"
        android:paddingTop="14dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/createFacilityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/drawer_background_color"
        android:text="Create Facility"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/UIBox"
        app:layout_constraintVertical_bias="0.988" />

    <EditText
        android:id="@+id/facility_name_editText"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="373dp"
        android:ems="10"
        android:hint="Facility Name"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/UIBox"
        app:layout_constraintEnd_toEndOf="@+id/UIBox"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="@+id/UIBox"
        app:layout_constraintTop_toTopOf="@+id/UIBox"
        app:layout_constraintVertical_bias="0.785" />

    <EditText
        android:id="@+id/facility_location_editText"
        android:layout_width="218dp"
        android:layout_height="41dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="Facility Location"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/createFacilityButton"
        app:layout_constraintEnd_toEndOf="@+id/UIBox"
        app:layout_constraintStart_toStartOf="@+id/UIBox"
        app:layout_constraintTop_toBottomOf="@+id/facility_name_editText"
        app:layout_constraintVertical_bias="0.058" />


</androidx.constraintlayout.widget.ConstraintLayout>