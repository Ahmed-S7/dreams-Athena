<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entrant_and_organizer_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".EntrantAndOrganizerFragments.homeScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/entrant_and_organizer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D7F2EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/content_frame"
            android:layout_width="393dp"
            android:layout_height="600dp"
            android:layout_marginTop="34dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_name"
            app:layout_constraintVertical_bias="1.0">

        </androidx.fragment.app.FragmentContainerView>

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bai_jamjuree_bold"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/title_text_color"
            android:textSize="34sp"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.004" />


        <ImageButton
            android:id="@+id/profile_picture_button"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:backgroundTint="#D7F2EE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.994"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.043"
            app:srcCompat="@drawable/profilepicturebutton" />

        <ImageButton
            android:id="@+id/more_options_button"
            android:layout_width="54dp"
            android:layout_height="28dp"
            android:backgroundTint="#D7F2EE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.061"
            app:srcCompat="@drawable/moreoptionsbutton" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/drawer_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"><![CDATA[
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">



















            ]]>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="453dp"
                android:layout_height="82dp"
                android:layout_marginTop="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/bottombarcoloring" />

            <ImageButton
                android:id="@+id/check_events_button"
                android:layout_width="127dp"
                android:layout_height="68dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="288dp"
                android:backgroundTint="#93BDB6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/checkeventsbutton" />

            <ImageView
                android:id="@+id/text_addon_non_edit"
                android:layout_width="104dp"
                android:layout_height="16dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/scan_qr_code_button"
                app:layout_constraintHorizontal_bias="0.375"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/check_events_button"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/events_attending_text_addon" />

            <ImageButton
                android:id="@+id/check_updates_button"
                android:layout_width="114dp"
                android:layout_height="0dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#93BDB6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/scan_qr_code_button"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:srcCompat="@drawable/updatesbuttonimage" />

            <ImageButton
                android:id="@+id/scan_qr_code_button"
                android:layout_width="127dp"
                android:layout_height="81dp"
                android:backgroundTint="#93BDB6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/final_qr_code_button" />

            <LinearLayout
                android:id="@+id/more_options_drawer"
                android:layout_width="141dp"
                android:layout_height="0dp"
                android:background="#90C5BD"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/scan_qr_code_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/create_event_button"
                        android:layout_width="139dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="24dp"
                        android:backgroundTint="@color/drawer_background_color"
                        android:src="@drawable/create_event_drawer_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.092" />

                    <ImageButton
                        android:id="@+id/events_im_hosting_button"
                        android:layout_width="142dp"
                        android:layout_height="71dp"
                        android:layout_marginTop="7dp"
                        android:backgroundTint="@color/drawer_background_color"
                        android:src="@drawable/events_hosting_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/create_event_button"
                        app:layout_constraintVertical_bias="0.004" />

                    <ImageButton
                        android:id="@+id/close_drawer_button"
                        android:layout_width="45dp"
                        android:layout_height="31dp"
                        android:layout_marginStart="99dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/drawer_background_color"
                        android:src="@drawable/left_arrow_drawer"
                        app:layout_constraintBottom_toTopOf="@+id/create_event_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="91dp"
                        android:layout_height="19dp"
                        android:text="close drawer"
                        android:textAlignment="viewEnd"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/create_event_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.954"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/close_drawer_button"
                        app:layout_constraintVertical_bias="0.0" />

                    <ImageButton
                        android:id="@+id/adminProfileBrowse"
                        android:layout_width="132dp"
                        android:layout_height="74dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/drawer_background_color"
                        android:src="@drawable/admin_profile_browse_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.444"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/adminEventsBrowse"
                        app:layout_constraintVertical_bias="0.0" />

                    <ImageButton
                        android:id="@+id/adminImageBrowse"
                        android:layout_width="137dp"
                        android:layout_height="74dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="@color/drawer_background_color"
                        android:src="@drawable/browse_images"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/browse_app_facilities_button"
                        app:layout_constraintVertical_bias="0.085" />

                    <ImageButton
                        android:id="@+id/adminEventsBrowse"
                        android:layout_width="136dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/drawer_background_color"
                        android:src="@drawable/browse_events_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.444"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/manage_faciliity"
                        app:layout_constraintVertical_bias="0.018" />

                    <ImageButton
                        android:id="@+id/manage_faciliity"
                        android:layout_width="135dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/manage_facility_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/events_im_hosting_button"
                        app:layout_constraintVertical_bias="0.0" />

                    <ImageButton
                        android:id="@+id/browse_app_facilities_button"
                        android:layout_width="126dp"
                        android:layout_height="86dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/browse_app_facilities"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/adminProfileBrowse"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>